
{
    "name": "pmii/pmii-web-uin",
    "description": "Aplikasi Website Dinamis dan Sistem Internal PMII UIN Sunan Gunung Djati Cabang Kota Bandung.",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/core/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "php -r \"require_once 'vendor/autoload.php'; \\App\\Core\\DotenvLoader::load();\""
        ]
    }
}
